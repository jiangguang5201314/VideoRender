<Window xmlns:Core="clr-namespace:Renderer.Core;assembly=Renderer.Core"  x:Class="SampleApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="252*" />
            <ColumnDefinition Width="251*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="55*" />
            <RowDefinition Height="256*" />
        </Grid.RowDefinitions>

        <Grid Grid.ColumnSpan="2" Grid.Row="0" >
            <Button Content="Start" Height="23" HorizontalAlignment="Left" Margin="6,15,0,0" Name="buttonStart" VerticalAlignment="Top" Width="75" Click="buttonStart_Click" />
            <Button Content="Stop" Height="23" HorizontalAlignment="Left" Margin="95,15,0,0" Name="buttonStop" VerticalAlignment="Top" Width="75" Click="buttonStop_Click" />
        </Grid>
<Core:D3DElement />
        <Image Grid.Column="0" Grid.Row="1" HorizontalAlignment="Stretch" Margin="5" Name="imageD3D" Stretch="Uniform" VerticalAlignment="Stretch" />
        <Image Grid.Column="1" Grid.Row="1" HorizontalAlignment="Stretch" Margin="5" Name="imageWB" Stretch="Uniform" VerticalAlignment="Stretch"  />
    </Grid>
</Window>
